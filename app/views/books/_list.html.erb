<h3>Books</h3>
<table class="table table-hover">
	<thead>
		<tr>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
	</thead>
	<tbody>
		<% books.each do |book| %>
		<tr>
			<td>
				<%=link_to book_path(book.id) do %>
				<%= book.title %>
				<% end %>
			</td>
			<td><%= book.body %></td>
		</tr>
		<% end %>
	</tbody>
</table>