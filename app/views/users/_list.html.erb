			<h3>User info</h3>
			<%= attachment_image_tag user, :profile_image, format:"jpeg", class: "img-circle pull-left profile-img", fallback: "no_image.jpg", size: "100x100" %>

			<table class="table">
				<thead>
					<tr>
						<th></th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>name</td>
						<td> <%= user.name %> </td>
					</tr>
					<tr>
						<td>introduction</td>
						<td> <%= user.introduction %></td>
					</tr>
				</tbody>
			</table>
			<% if user != current_user %>
				<%=link_to user_path(current_user.id),class: "btn btn-block btn-default" do%><i class="glyphicon glyphicon-wrench"></i><% end %>
			<% else %>
				<%= link_to edit_user_path(user), class: "btn btn-block btn-default" do%><i class="glyphicon glyphicon-wrench"></i><% end %>
			<% end %>





